<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_on_the_shelves"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.lab708.tcmsystem.activity.ExecuteShelvesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/linear">

        <TextView
            android:id="@+id/code_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textview_big_1_size"
            android:layout_marginTop="@dimen/margin_title"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/med_info" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/table">

            <!-- Serial number -->
            <TableRow>
                <TextView
                    android:text="@string/serial_number"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/MDnumber"
                    android:textSize="@dimen/textview_middle_size" />
                <TextView
                    android:id="@+id/v_MDnumber"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="@dimen/textview_middle_size" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>
            </TableRow>

            <TableRow>
                <!-- Medicine name -->
                <TextView
                    android:text="@string/med_name"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/MDname"
                    android:textSize="@dimen/textview_middle_size" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/v_MDname"
                    android:textSize="@dimen/textview_middle_size" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>
            </TableRow>

            <!-- Expiration date -->
            <TableRow
                android:layout_gravity="center_vertical">
                <TextView
                    android:text="@string/exp_date"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/textview_middle_size"/>
                <FrameLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    >
                    <DatePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        android:id="@+id/v_MDdate"
                        android:headerBackground="?attr/colorButtonNormal" />
                </FrameLayout>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>
            </TableRow>

            <TableRow>
                <!-- Quantity -->
                <TextView
                    android:text="@string/quantity"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/textView5"
                    android:textSize="@dimen/textview_middle_size" />
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="7"
                    android:id="@+id/quantity" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>
            </TableRow>

            <TableRow
                android:layout_gravity="center_vertical"
                android:id="@+id/lastRow"
                >
                <!-- Shelf location -->
                <TextView
                    android:text="@string/location"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/textView6"
                    android:textSize="@dimen/textview_middle_size" />

                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp">
                    <NumberPicker
                        android:id="@+id/locationone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
                        >
                    </NumberPicker>
                    <NumberPicker
                        android:id="@+id/locationtwo"
                        android:layout_toRightOf="@id/locationone"
                        android:layout_toEndOf="@id/locationone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
                        >
                    </NumberPicker>
                    <NumberPicker
                        android:id="@+id/locationthree"
                        android:layout_toRightOf="@id/locationtwo"
                        android:layout_toEndOf="@id/locationtwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
                        >
                    </NumberPicker>
                </RelativeLayout>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>
            </TableRow>
            <TableRow>
                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    >
                    <Button
                        android:text="@string/add_location"
                        android:layout_width="@dimen/btn_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/text"
                        android:id="@+id/endbutton"/>
                </FrameLayout>

            </TableRow>

            <TableRow>
                <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    >
                    <Button
                        android:text="@string/submit"
                        android:layout_width="@dimen/btn_width"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text"
                        android:id="@+id/newbutton" />
                </FrameLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>